@model IEnumerable<ArtistApplication.Domain.Domain.Album>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

   
    <form asp-action="Index" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-10">
                <input type="text" name="searchString" class="form-control custom-input" value="@ViewBag.SearchString" placeholder="Search by Title or Artist" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary custom-btn">Search</button>
            </div>
        </div>
    </form>
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            @item.Title
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
</div>
