@using ArtistApplication.Domain.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ArtistApplicationUser> SignInManager
@inject UserManager<ArtistApplicationUser> UserManager

<ul class="navbar-nav" style="font-size:13px">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            @{
                var user = UserManager.GetUserAsync(User).Result;
                var firstName = user?.FirstName ?? "User";
            }
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> @firstName</a>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-light " style="font-size:13px;">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light " asp-area="Identity" asp-page="/Account/Register">Register</a>
            <a class="nav-link text-light " asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>