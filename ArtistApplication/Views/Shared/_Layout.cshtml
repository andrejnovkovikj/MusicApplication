<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArtistApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ArtistApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.plyr.io/3.7.11/plyr.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.plyr.io/3.7.11/plyr.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark  d-flex flex-column align-items-center vh-100" style="position: fixed; left: 0; top: 0; width: 200px;background-color: #141414;">
            <div class="container-fluid d-flex flex-column h-100 p-0">
                <a class="navbar-brand d-flex align-items-center mt-3" href="#">
                    
                    <span class="ms-2 text-light" style="font-size:30px;">Fakefy</span>
                </a>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-column flex-grow-2 " >
                    <ul class="navbar-nav flex-column w-100 mt-3 ">
                        <li class="nav-item mt-2">
                            <a class="nav-link text-light d-flex align-items-center " asp-action="" asp-controller="Home">
                                
                                <span class="ms-2" style="font-size:16px;">Home</span>
                            </a>
                        </li>
                        <li class="nav-item mt-2">
                            <a class="nav-link text-light d-flex align-items-center " asp-action="Browse" asp-controller="Home">
                                
                                <span class="ms-2" style="font-size:16px;">Explore</span>
                            </a>
                        </li>
                        <li class="nav-item mt-2">
                            <a class="nav-link text-light d-flex align-items-center " asp-action="Privacy" asp-controller="Home">
                                
                                <span class="ms-2" style="font-size:16px;">Privacy</span>
                            </a>
                        </li>
                    </ul>

                    <a class="nav-link text-light d-flex align-items-center" asp-action="Browse" asp-controller="Home"><span class="text-light mt-3" style="font-size:16px;">Library</span></a>
                    <ul class="navbar-nav flex-column w-100 mt-2 border-top border-light">
                        <li class="nav-item mt-2">
                            <a class="nav-link text-light d-flex align-items-center" asp-action="MyLikedSongs" asp-controller="Songs">
                                <span class="ms-2" style="font-size:16px;">
                                    <i class="bi bi-music-note"></i>
                                    Liked Songs
                                </span>
                            </a>
                        </li>

                        <li class="nav-item mt-2" style="font-size:16px;">
                            <a class="nav-link text-light d-flex align-items-center" asp-action="MyLikedAlbums" asp-controller="Albums">
                                <span class="ms-2">
                                    <i class="bi bi-vinyl-fill"></i>
                                    Liked Albums
                                </span>
                            </a>
                        </li>

                        <li class="nav-item mt-2" style="font-size:16px;">
                            <a class="nav-link text-light d-flex align-items-center" asp-action="MyLikedPlaylists" asp-controller="Playlists">
                                <span class="ms-2">
                                    <i class="bi bi-collection-play-fill"></i>
                                    Liked Playlists
                                </span>
                            </a>
                        </li>

                        <li class="nav-item mt-2" style="font-size:16px;">
                            <a class="nav-link text-light d-flex align-items-center" asp-action="MyLikedArtists" asp-controller="Artists">
                                <span class="ms-2">
                                    <i class="bi bi-mic-fill"></i>

                                    Liked Artists
                                </span>
                            </a>
                        </li>

                    </ul>
                </div>

                <div class="mt-auto w-100  text-center" style="background-color:#2e2c2c">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

    </header>


    <div class="container custom-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container text-center text-light">
            &copy; 2024 - Fakefy -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>