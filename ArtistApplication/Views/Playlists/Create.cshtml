@model ArtistApplication.Domain.ViewModel.PlaylistViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container" style="max-width: 800px; margin-top: 100px;">
    <h1>Create</h1>

    <h4>Playlist</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="UserName" />
                <div class="form-group">
                    <label asp-for="PictureUrl" class="control-label"></label>
                    <textarea asp-for="PictureUrl" class="form-control"></textarea>
                    <span asp-validation-for="PictureUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>